{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "C3",
  "version": "0.2.7",
  "identifier": "com.jonpatterson.c3",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "c3",
        "width": 1200,
        "height": 800,
        "minWidth": 400,
        "minHeight": 600,
        "resizable": true,
        "titleBarStyle": "Transparent",
        "hiddenTitle": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/c3-hook.sh", "resources/icon.png"],
    "macOS": {
      "entitlements": "./Entitlements.plist"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
